<div class="container"
      ng-swipe-right="downExhibit()"
      ng-swipe-left="upExhibit()">
  <div ng-click="downExhibit()"
        class="col-xs-2 chev left">
    <i ng-show="exhibitID != exhibitFloor"
       class="mdi-navigation-chevron-left mdi-material-teal"></i>
  </div>
  <div class="col-xs-8 col-md-3 exhibit">
    <img class="exImg" ng-src='{{exhibit.image}}' alt="{{exhibit.title}}">

    <div class="panel panel-default exDisc">
      <div class="panel-body">
        {{exhibit.exNum}} | <a href="tour/{{tour.id}}">{{tour.title}}</a> <br />
        <b>{{exhibit.artist}}</b> <br />
        {{exhibit.title}}
      </div>
    </div>
  </div>

  <div ng-click="upExhibit()"
      ng-show="exhibitID != exhibitCeil"
      class="col-xs-2 chev right">
    <i class="mdi-navigation-chevron-right mdi-material-teal"></i>
  </div>
</div>
